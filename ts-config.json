{
    "compilerOptions": {
        "target": "es2020",
        "module": "node16",
        "ModuleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node"
        ],
        "strict": false,
        "skipLibCheck": true,
        "outDir": "./complied-js-files",
        "rootDir": "./task"
    },



    "include": [
        "task/**/*.ts"
  ],
    "exclude": [
        "node_modules",
        "complied-js-files"
    ]
}