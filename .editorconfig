# EditorConfig: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 4

[*.js]
trim_trailing_whitespace = true

[*.properties]
trim_trailing_whitespace = false

[*.{css,sass,scss}]
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = true

[*.{yaml,yml}]
indent_size = 2
indent_style = space
